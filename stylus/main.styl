/// modal

#modal
  top 0
  left 0
  width 100%
  height 100%
  z-index 200
  display none
  cursor pointer
  position fixed
  padding-top 2rem
  background rgba(0,0,0,0.8)

#modal-image
  margin auto
  display block
  max-height 85%

#caption
  color #ddd
  display block
  padding 0.5rem 0
  font-size 1.25rem
  text-align center

#modal-image, #caption
  animation-name zoom
  animation-duration 0.6s

@keyframes zoom
  from
    transform:scale(0)
  to 
    transform:scale(1)

//end modal

/// carousel

.carousel
  overflow hidden
  transition width 0.5s ease
  width 800px
  
  & img
    height 450px
    width 800px

.image-container
  display flex
  transform translateX(0)
  transition transform 0.5s ease-in-out

//end carousel

/// audio

.song
  display flex
  align-items center

  & button
    border none
    width 1.75rem
    height 1.5rem
    cursor pointer
    background $back
    background-repeat no-repeat
    background-image url(../imgs/play.png)

.spacer
  height 2rem

//end audio