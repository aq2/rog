$fore = #bbb
$back = #111
$nav = #f99



/// typography

@font-face
  font-family snake
  src: url(SnakeChan.ttf)

body
  font-family 'DM Sans', sans-serif

h1, h2, h3, h4
  font-family snake, monospace
  font-size 3rem

a:link, a:visited, a:active
  color #99f

a:hover
  color $nav

//end typography

/// layout
*
  box-sizing border-box

body
  background-color $back
  color $fore
  overflow-x hidden
  margin 0
  padding 0
  margin-top -2rem


#mymain
  width 100vw
  min-height 100vh
  padding 1rem 3rem
  transform-origin top left
  transition transform 0.5s linear
  display flex
  align-items center
  justify-content center

  &.show-nav
    transform rotate(-20deg)

  & h1, h2
    padding-left 5rem

  
.page-container
  display flex 


.row
  display flex
  flex-wrap wrap
  padding 0 4px
  justify-content center

  & img
    margin-top 8px
    max-width 200px
    object-fit contain
    cursor pointer
    transition 0.5s
    border-radius 15px

    &:hover
      opacity 0.7



.toonz
  width 30%
  // border solid 2px blue
  min-width 300px
  

  & p
    // color red
    margin 0
    // display inline-block
    display flex
    align-items center
    // border-bottom 2px dotted red

  & audio
    max-width 10rem
    // display inline-block
    margin 0 0.5rem
    height 1rem
