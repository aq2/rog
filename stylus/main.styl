$fore = #bbb
$back = #111
$nav = #f99

/// typography

@font-face
  font-family snake
  src: url(SnakeChan.ttf)

body
  font-family 'DM Sans', sans-serif

h1
  font-family snake, monospace
  font-size 2.5rem

h2
  font-family snake, monospace


a:link, a:visited, a:active
  color #99f

a:hover
  color $nav

//end typography

/// layout

*
  box-sizing border-box

body
  margin 0
  padding 0
  color $fore
  overflow-x hidden
  margin-top -2rem
  background-color $back

#main
  width 100vw
  min-height 100vh
  padding 1rem 3rem
  transform-origin top left
  transition transform 0.5s linear
  display flex
  justify-content space-between

  &.show-nav
    transform rotate(-20deg)

  & h1, h2
    padding-left 5rem

.homecontent
  margin auto

.content
  width 65%
  height 150vh

.photos
  display flex
  flex-wrap wrap
  padding 0 4px
  justify-content center

  & img
    margin-top 8px
    max-width 200px
    object-fit contain
    cursor pointer
    transition 0.5s
    border-radius 15px

    &:hover
      opacity 0.7

.toonz
  top 1%
  width 30%
  height 10vh
  position sticky
  min-width 300px

  & p
    margin 0
    display flex
    align-items center

  & audio
    max-width 3rem
    margin 0 0.5rem
    height 1rem

//end layout

/// nav

#circle-container
  position fixed
  top -100px
  left -100px
  z-index 100

#circle
  background $nav
  height 200px
  width 200px
  border-radius 50%
  position relative
  transition transform 0.5s linear


#circle.show-nav
  transform rotate(-90deg)

#circle button 
  position absolute
  top 50%
  left 50%
  background transparent
  border 0
  cursor pointer
  outline none
  animation opac 1s infinite alternate

#circle button:focus
  outline none


#circle button#open
  margin-left 12px
  margin-top 15px
  // transition color 0.5s ease

@keyframes opac
  from
    opacity 0.33
  to
    opacity 1


#circle button#close
  // top 50%
  transform rotate(90deg)
  transform-origin top left
  outline none
  font-size 3rem
  // margin-bottom 4rem
  // margin-left 3rem
  // color red
  // margin-right 4rem
  // margin auto
  padding 1.1rem
  font-family snake




#nav.show-nav ul li
  transform translateX(0)
  transition-delay 0.3s

#nav
  position fixed
  bottom 40px
  left 0
  z-index 100


#nav ul 
  list-style none
  padding-left 30px


#nav ul li 
  // text-transform uppercase
  color #345fff
  margin 10px 0
  transform translateX(-200%)
  transition transform 0.4s ease-in


