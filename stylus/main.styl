/// modal

.modal
  display none
  position fixed
  z-index 200
  padding-top 100px
  left 0
  top 0
  width 100%
  height 100vh
  overflow auto
  background rgba(0,0,0,0.8)

.modal-content
  margin auto
  display block
  // width 80%
  max-width 700px
  // max-height 60%
  object-fit contain
  border 2px solid red


#caption
  margin auto
  display block
  // AQ todo!!!
  width 80%
  max-width 700px
  text-align center
  color #ccc
  padding 10px 0
  height 150px

.modal-content, #caption
  animation-name zoom
  animation-duration 0.6s

@keyframes zoom
  from
    transform:scale(0)
  to 
    transform:scale(1)

.close
  position absolute
  top 15px
  right 35px
  color #f1f1f1
  font-size 40px
  font-weight bold
  transition 0.3s

.close:hover, .close:focus
  color #bbb
  text-decoration none
  cursor pointer

@media only screen and (max-width: 700px)
  .modal-content
    width 100%

//end modal

/// carousel

.carousel
  overflow hidden
  transition width 0.5s ease
  width 800px
  
  & img
    height 450px
    width 800px

.image-container
  display flex
  transform translateX(0)
  transition transform 0.5s ease-in-out

//end carousel