@import 'carousel.styl'
@import 'nav.styl'

*
  box-sizing border-box

body
  background-color black
  color white
  overflow-x hidden
  margin 0
  padding 0
  margin-top -1.5rem
  font-family 'DM Sans', sans-serif

h1, h2, h3, h4
  font-family 'DM Mono', monospace

h1 span
  font-size 1.5rem


a:link, a:visited, a:active
  color #f0d

a:hover
  color orange

#mymain
  // background #f0f
  transform-origin top left
  transition transform 0.5s linear
  width 100vw
  min-height 100vh
  padding 1rem 3rem

#mymain.show-nav
  transform rotate(-20deg)

.content h1, h2
  color orange
  padding-left 5rem





