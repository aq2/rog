@import 'carousel.styl'
@import 'nav.styl'
// @import 'pages.styl'

*
  box-sizing border-box

body
  background-color black
  color white
  overflow-x hidden
  margin 0
  padding 0
  margin-top -1.5rem
  font-family 'DM Sans', sans-serif

h1, h2, h3, h4
  font-family 'DM Mono', monospace

h1 span
  font-size 1.5rem

a:link, a:visited, a:active
  color #f0d

a:hover
  color orange

#mymain
  width 100vw
  min-height 100vh
  padding 1rem 3rem
  transform-origin top left
  transition transform 0.5s linear

  &.show-nav
    transform rotate(-20deg)

  & h1, h2
    color orange
    padding-left 5rem

  
.page-container
  border 2px solid red
  display flex 


.row
  display flex
  flex-wrap wrap
  padding 0 4px
  justify-content center
  // max-width 66%

  & img
    margin-top 8px
    max-width 200px
    // border 2px solid red
    object-fit contain
    cursor pointer
    transition 0.5s
    border-radius 15px

    &:hover
      opacity 0.7

.modal
  display none
  position fixed
  z-index 200
  padding-top 100px
  left 0
  top 0
  width 100%
  max-height 80vh
  overflow auto
  background rgba(0,0,0,0.8)

.modal-content
  margin auto
  display block
  // width 80%
  max-width 700px
  max-height 90vh
  object-fit cover


#caption
  margin auto
  display block
  // AQ todo!!!
  width 80%
  max-width 700px
  text-align center
  color #ccc
  padding 10px 0
  height 150px

.modal-content, #caption
  animation-name zoom
  animation-duration 0.6s

@keyframes zoom
  from
    transform:scale(0)
  to 
    transform:scale(1)

.close
  position absolute
  top 15px
  right 35px
  color #f1f1f1
  font-size 40px
  font-weight bold
  transition 0.3s

.close:hover, .close:focus
  color #bbb
  text-decoration none
  cursor pointer

@media only screen and (max-width: 700px)
  .modal-content
    width 100%

.toonz
  width 30%
  border solid 2px blue
  min-width 300px