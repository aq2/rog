@import 'carousel.styl'
@import 'nav.styl'
// @import 'pages.styl'
@import 'modal.styl'

*
  box-sizing border-box

body
  background-color black
  color white
  overflow-x hidden
  margin 0
  padding 0
  margin-top -2rem
  font-family 'DM Sans', sans-serif

h1, h2, h3, h4
  font-family 'DM Mono', monospace

h1 span
  font-size 1.5rem

a:link, a:visited, a:active
  color #f0d

a:hover
  color orange

#mymain
  width 100vw
  min-height 100vh
  padding 1rem 3rem
  transform-origin top left
  transition transform 0.5s linear
  display flex
  align-items center
  justify-content center

  &.show-nav
    transform rotate(-20deg)

  & h1, h2
    // color orange
    padding-left 5rem

  
.page-container
  // border 2px solid red
  display flex 


.row
  display flex
  flex-wrap wrap
  padding 0 4px
  justify-content center
  // max-width 66%

  & img
    margin-top 8px
    max-width 200px
    // border 2px solid red
    object-fit contain
    cursor pointer
    transition 0.5s
    border-radius 15px

    &:hover
      opacity 0.7



.toonz
  width 30%
  // border solid 2px blue
  min-width 300px
  

  & p
    // color red
    margin 0
    // display inline-block
    display flex
    align-items center
    // border-bottom 2px dotted red

  & audio
    width 3rem
    // display inline-block
    margin 0 0.5rem
    height 1rem
