//end layout

/// nav

#circle-container
  position fixed
  top -100px
  left -100px
  z-index 100

#circle
  background $nav
  height 200px
  width 200px
  border-radius 50%
  position relative
  transition transform 0.5s linear


#circle.show-nav
  transform rotate(-90deg)

#circle button 
  position absolute
  top 50%
  left 50%
  background transparent
  border 0
  cursor pointer
  outline none
  animation opac 1s infinite alternate

#circle button:focus
  outline none


#circle button#open
  margin-left 12px
  margin-top 15px
  // transition color 0.5s ease

@keyframes opac
  from
    opacity 0.33
  to
    opacity 1


#circle button#close
  // top 50%
  transform rotate(90deg)
  transform-origin top left
  outline none
  font-size 3rem
  // margin-bottom 4rem
  // margin-left 3rem
  // color red
  // margin-right 4rem
  // margin auto
  padding 1.1rem
  font-family snake




#nav.show-nav ul li
  transform translateX(0)
  transition-delay 0.3s

#nav
  position fixed
  bottom 40px
  left 0
  z-index 100


#nav ul 
  list-style none
  padding-left 30px


#nav ul li 
  // text-transform uppercase
  color #345fff
  margin 10px 0
  transform translateX(-200%)
  transition transform 0.4s ease-in


