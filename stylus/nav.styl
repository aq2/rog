#circle-container
  position fixed
  top -100px
  left -100px
  z-index 100

#circle
  background #ff9799
  height 200px
  width 200px
  border-radius 50%
  position relative
  transition transform 0.5s linear

#circle.show-nav
  transform rotate(-90deg)

#circle button 
  position absolute
  top 50%
  left 50%
  height 100px
  background transparent
  border 0
  font-size 26px
  color #f0d
  cursor pointer
  outline none



#circle button:focus
  outline none


#circle button#open
  left 60%


#circle button#close
  top 60%
  transform rotate(90deg)
  transform-origin top left
  outline none




#nav.show-nav ul li
  transform translateX(0)
  transition-delay 0.3s

#nav
  position fixed
  bottom 40px
  left 0
  z-index 100


#nav ul 
  list-style none
  padding-left 30px


#nav ul li 
  // text-transform uppercase
  color #345fff
  margin 10px 0
  transform translateX(-200%)
  transition transform 0.4s ease-in


